{
  "name": "typescript-node-jest-starter",
  "version": "1.0.0",
  "description": "TypeScript + Node.js + Jest starter template",
  "scripts": {
    "start-dev": "concurrently \"tsc --watch\" \"TS_NODE_BASEURL=./dist nodemon -r tsconfig-paths/register dist/server.js\"",
    "start-prod": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/server.js",
    "build": "rimraf dist && tsc",
    "test-watch": "jest --watchAll",
    "test": "jest",
    "build-start": "npm run build && npm run start-prod",
    "lint": "eslint . --ext .ts --ext .mts"
  },
  "devDependencies": {
    "@types/jest": "29.0.3",
    "@types/lodash": "4.14.185",
    "@types/node": "18.7.19",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "concurrently": "7.4.0",
    "eslint": "8.24.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.0.3",
    "lodash": "4.17.21",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.3"
  },
  "keywords": [],
  "author": "Vimson Varghese",
  "license": "ISC"
}
